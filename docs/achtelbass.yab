               until(!notenwert=3 and !notenwert=5 and !notenwert=6 and !notenwert=7)
                  taktwertigkeit = taktwertigkeit-(notenwert)
               if modus$ = "b" or modus$ = "n" then 
                  pausevsnote = 1
               else

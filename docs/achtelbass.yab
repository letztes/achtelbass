sub tl(grundnote,tongeschlecht$,zufallszahl)
   dim dur(7)
      dur(0)=grundnote
      dur(1)=grundnote+2
      dur(2)=grundnote+4
      dur(3)=grundnote+5
      dur(4)=grundnote+7
      dur(5)=grundnote+9
      dur(6)=grundnote+11
      dur(7)=grundnote+12
      
   dim moll(7)
      moll(0)=grundnote
      moll(1)=grundnote+2
      moll(2)=grundnote+3
      moll(3)=grundnote+5
      moll(4)=grundnote+7
      moll(5)=grundnote+8
      moll(6)=grundnote+10
      moll(7)=grundnote+12

   switch tongeschlecht$
      case "dur":a = dur(zufallszahl):break
      case "moll":a = moll(zufallszahl):break
   end switch
   return a
end sub

